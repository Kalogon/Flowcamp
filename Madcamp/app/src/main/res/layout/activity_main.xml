<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF"
    >

    <FrameLayout
        android:id="@+id/frag_container_"
        android:layout_width="match_parent"
        android:layout_height="514dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="579dp"
            android:layout_height="621dp"
            android:layout_marginLeft="-85dp"
            android:src="@drawable/backgroung_image"></ImageView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        >
        <Button
            android:id="@+id/btn_frag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#FF8174"
            android:gravity="center"
            android:text="연락처"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_frag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#FF5151"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="갤러리"/>
        <Button
            android:id="@+id/btn_frag3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="#FF8174"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="지도"/>
    </LinearLayout>

</LinearLayout>


